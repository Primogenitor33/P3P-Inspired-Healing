void P3PConditionCheck()
{
	OPEN_MSG_WIN();
	MSG( P3PHealDead );
	SEL_CHK_PAD(6,1);
	int selection = SEL(P3PHealDeadSel);
	switch (selection) {
		case 0: //Yes
			CLOSE_MSG_WIN();
			HealingDead();
			break;
		case 1: //No
			CLOSE_MSG_WIN();
			condition_check_unhooked();
			break;
		default:
			break;
	}
	CLOSE_MSG_WIN();
	return;
}

void P3PClock()
{
	OPEN_MSG_WIN();
	MSG( P3PHealClock );
	int selection = SEL(P3PHealClockSel);
	SEL_CHK_PAD(6,20);
	switch (selection) {
		case 0: //Heal
			if (IsDamaged())
			{
				CLOSE_MSG_WIN();
				HealingMenu();
			}
			else
			{
				MSG( NoHealing );
				CLOSE_MSG_WIN();
			}
			break;
		case 1: //Save
			CLOSE_MSG_WIN();
			save_point_unhooked();
			break;
		default:
			break;
	}
	CLOSE_MSG_WIN();
	return;
}

