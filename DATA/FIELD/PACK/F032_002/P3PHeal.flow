void P3PHealVersion()
{
	MSG_HELP(P3PHealWelcome);
	OPEN_MSG_WIN();
	MSG( P3PChooseVersion );
	int selection = SEL(P3PHealVersionSel);
	switch (selection) {
		case 0: //Full Game
			BIT_ON( 9994 );
