void HealingDead()
{
	if (GET_YEN() < 2500)
	{
		OPEN_MSG_WIN();
		MSG( Broke );
		CLOSE_MSG_WIN();
		condition_check_unhooked();
		return;
	}
	else
	{
		REMOVE_YEN(2500);
		CALL_BTL_SFX( 2, 10 );
		FUNCTION_0093();
		condition_check_unhooked();
	}
	return;
}

void HealingClock()
{
	if (GET_YEN() < 2000)
	{
		OPEN_MSG_WIN();
		MSG( Broke );
		CLOSE_MSG_WIN();
		return;
	}
	else
	{
		REMOVE_YEN(2000);
		CALL_BTL_SFX( 2, 10 );
		FUNCTION_0093();
	}
	return;
}

bool IsDamaged()
{
	for(int x = 1; x <= 10; x++){
		if ((GET_TOT_SP(x) > GET_CUR_SP(x)) || (GET_TOT_HP(x) > GET_CUR_HP(x))){
			return 1;
		}
	}
	return 0;
}

bool IsDead()
{
	for(int x = 1; x <= 10; x++){
		if (GET_CUR_HP(x) == 0){
			return 1;
		}
	}
	return 0;
}

void HealTo1HP()
{
	for(int x = 1; x <= 10; x++){
		if (GET_CUR_HP(x) == 0) {
			SET_HP(x,1);
		}
	}
	return;
}

